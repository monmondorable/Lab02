@model IEnumerable<Lab02.Models.Book>

@{
    ViewBag.Title = "Book List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Book</h2>
<table cellpadding="10" border="1">
    <thead>
        <tr>
            <th>
                Tittle
            </th>
            <th>
                Author
            </th>
            <th>
                Image Cover
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    @foreach(var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Tittle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author)
    </td>
    <td>
        <img src="@item.Imagecover"width="95" title="cover" />
    </td>
    <td>
        <a href="/Book/EditBook/@item.Id" title="Edit Book">Edit</a>
    </td>
    <td>
        <a href="/Book/DeleteBook/@item.Id" title="Delete Book">Delete</a>
    </td>
</tr>
            }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tittle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagecover)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tittle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imagecover)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
